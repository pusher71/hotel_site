@model string

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comment</title>
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <h2>Написать сообщение</h2>
        <form method="post">
            <input type="hidden" name="userToId" value="@Model" />
            <label>Текст</label>
            <br />
            <textarea name="text" cols="40" rows="5"></textarea>
            <br />
            <input type="submit" value="Отправить" />
        </form>
    }
    else
    {
        <h2>Требуется авторизация для написания сообщения</h2>
    }

    <a asp-area="" asp-controller="Message" asp-action="Index">Назад</a>
</body>
</html>
