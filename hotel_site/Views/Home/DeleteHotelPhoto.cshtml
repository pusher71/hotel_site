@model int

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hotel Photo</title>
</head>
<body>
    @if (@User.Identity != null && @User.Identity.IsAuthenticated)
    {
        <h2>Вы уверены, что хотите удалить фотографию отеля?</h2>
        <form method="post">
            <input type="hidden" name="id" value="@Model" />
            <input type="submit" value="Удалить" />
        </form>
    }
    else
    {
        <h2>Требуется авторизация для удаления фотографии отеля</h2>
    }

    <a href="/Home">Вернуться на главную страницу</a>
</body>
</html>
