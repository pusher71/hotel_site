@model HotelBuilding
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hotel</title>
</head>
<body>
    <h1>@Model.Name</h1>
    <p>@Model.Description</p>
    <p> </p>
    <div class="grid-photo-container">
        @foreach (HotelPhoto hotelPhoto in Model.GetAllHotelPhotos())
        {
            <div class="grid-photo-item">
                <img class="grid-photo-image" src="data:image/jpeg;base64,@Convert.ToBase64String(hotelPhoto.Image)" />
                @if (@User.Identity != null && @User.Identity.IsAuthenticated)
                {
                    <a class="grid-photo-delete-link" asp-area="" asp-controller="Home" asp-action="DeleteHotelPhoto" asp-route-id="@hotelPhoto.Id">Удалить фотографию</a>
                }
            </div>
        }
    </div>
    @if (@User.Identity != null && @User.Identity.IsAuthenticated)
    {
        <a asp-area="" asp-controller="Home" asp-action="AddHotelPhoto" asp-route-hotelBuildingId="@Model.Id">Добавить фотографию</a>
    }
    <p> </p>
    <p>Адрес: @Model.Address</p>
    <p>Контактный телефон: @Model.PhoneNumber</p>
    <p>E-mail: @Model.Email</p>
    @if (@User.Identity != null && @User.Identity.IsAuthenticated)
    {
        <a asp-area="" asp-controller="Home" asp-action="EditHotelBuilding" asp-route-id="@Model.Id">Редактировать информацию</a>
        <br />
    }

    <a href="/Home">Вернуться на главную страницу</a>
</body>
</html>
