@model Room

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book</title>
</head>
<body>
    @if (@User.Identity != null && @User.Identity.IsAuthenticated)
    {
        <h2>Забронировать номер</h2>
        <form method="post">
            <input type="hidden" name="roomId" value="@Model.Id" />
            <label>Дата начала</label>
            <input type="datetime" name="momentStart" value="" />
            <br />
            <label>Дата окончания</label>
            <input type="datetime" name="momentEnd" value="" />
            <br />
            <label>Количество людей</label>
            <input type="number" name="personCount" min="1" value="" /> <!-- max="Model.MaxPersonCount" -->
            <br />
            <input type="submit" value="Добавить" />
        </form>
    }
    else
    {
        <h2>Требуется авторизация для бронирования номера</h2>
    }

    <a asp-area="" asp-controller="Home" asp-action="Index">Назад</a>
</body>
</html>
